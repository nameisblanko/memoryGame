doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Cards and Pugs
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
    body 
      div(class="row")
        
        -
          var decks = ["deck1", "deck2"];
          var list_of_cards = ["card-1.jpg", "card-2.jpg", "card-3.jpg",
                  "card-4.jpg", "card-5.jpg", "card-6.jpg"]
          list_of_cards.sort(() => Math.random()-0.5)
        each deck in decks
          each item in list_of_cards
            div(class="col-3" id=deck +"_" + item.split(".")[0] +"_div")
              div(class="card border-primary ")
                div(class="card-body")
                  img(src=item id=deck +"_" + item.split(".")[0] +"_topside" class="card-img-top " style="position: fixed;top: 0px; left: 0px;z-index=:-1;")
                  img(src="card-bg.jpg" id=deck +"_" + item.split(".")[0] +"_backside" class="card-img-top" style="position: fixed;top: 0px; left: 0px;z-index:50;")
          - list_of_cards.sort(() => Math.random()-0.5)