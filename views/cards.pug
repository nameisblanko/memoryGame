doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Cards and Pugs
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
        link(rel="stylesheet", href="style.css")
        script(src="app.js")
    body
      div(class="row")
        
        -
          var decks = ["deck1", "deck2"];
          var list_of_cards = ["card-1.jpg", "card-2.jpg", "card-3.jpg",
                  "card-4.jpg", "card-5.jpg", "card-6.jpg"]
          list_of_cards.sort(() => Math.random()-0.5)
        each deck in decks
          each item in list_of_cards
            div(class="col-3" id=deck +"_" + item.split(".")[0] +"_div")
              div(class="card border-primary m-1")
                button(type="submit" class="btn btn-primary" onClick="switcharoo_with_id('" + deck +"_" + item.split(".")[0] +"_div" +"')")
                div(class="card-body")
                  img(src=item id=deck +"_" + item.split(".")[0] +"_topside" class="card-img-top img-fluid card-front" )
                  img(src="card-bg.jpg" id=deck +"_" + item.split(".")[0] +"_backside" class="card-img-top img-fluid card-back backside-up" style="")
          - list_of_cards.sort(() => Math.random()-0.5)
          //- display: block; margin-left: auto;margin-right:auto;
          //- //onClick="backside_up_with_id(" + deck +"_" + item.split(".")[0] +"_div" +")"
      div(class="row")
        div(class="col-12 centered-fucking-div")
          button(type="submit" class="btn btn-primary" style="width: 25%;" onClick="switcharoo()")